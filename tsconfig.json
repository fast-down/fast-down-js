{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": true,
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "bench", "__test__", "example", "dist"],
}
